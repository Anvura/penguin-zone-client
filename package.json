{
  "name": "penguin-zone-client",
  "version": "3.0.0",
  "description": "Desktop Client for Penguin Zone!",
  "author": "Penguin Zone <business.anvurayt@gmail.com> (www.penguinzone.ca)",
  "license": "CC0-1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/Anvura/penguin-zone-client",
  "keywords": [
    "snowy fields",
    "cpps",
    "club penguin",
    "club penguin private server",
    "anvura",
    "penguin zone",
    "pz",
    "sf",
    "mjjrrb905",
    "mj"
  ],
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "com.penguinzone.desktop",
    "productName": "Penguin Zone",
    "protocols": {
      "name": "Penguin Zone",
      "schemes": [
        "penguinzone"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "anvura",
        "repo": "penguin-zone-client"
      }
    ],
    "mac": {
      "asar": false,
      "category": "public.app-category.games"
    },
    "linux": {
      "asar": false,
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "win": {
      "asar": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "discord-rpc": "^3.2.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^23.6.0"
  }
}
